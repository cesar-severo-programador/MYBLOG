
<%- include('partials/header.ejs') %>
<body id="kalina">
    <%- include('partials/homenavbar.ejs') %>


    <main class="grid containerp">
        <section id="featured" class="grid grid-flow-col gap-16 grid-main">
            
            
            <% if (articles.length > 0) { %>
                <figure class="cardp">
                    <a href="/<%= articles[0].slug %>">
                        <img src="<%= articles[0].image %>" alt="<%= articles[0].title %>">
                        <figcaption>
                            <span class="content-tag"><%= articles[0].category ? articles[0].category.title : '' %></span>
                            <h2 class="text-2xl"><%= articles[0].title %></h2>
                        </figcaption>
                    </a>

                </figure>
    
                <div class="grid grid-col-2 gap-16" >
                    <%
                    const indicesDesejados = [1, 2, 3, 4];

                    articles.filter((article, index) => indicesDesejados.includes(index)).forEach(article => { %>
                        <figure class="cardp">
                        <a href="/<%= article.slug %>">
                            <img src="<%= article.image %>" alt="<%= article.title %>">
                            <figcaption>
                            <span class="content-tag"><%= article.category ? article.category.title : '' %></span>
                            <h2 class="text-lg"><%- article.title.substring(0, 50) %>..</h2>
                            </figcaption>
                        </a>
                        </figure>
                    <% }); %>
                </div>
    
            <% } %>
    
        </section>

        <section id="weekly">
            <header class="grid grid-flow-col">
                <h3>Confira tamb√©m</h3>
                <a href="#" class="grid grid-flow-col">
                    <strong>Ver Tudo</strong>
                    <span></span>
                </a>
                
            </header>

            <div class="grid gap-16">

                <% 
                const indicesDesejados = [5,6,7];
                articles.filter((article, index) => indicesDesejados.includes(index)).forEach(article => { %>

                
                    <figure class="">
                        <a href="/<%= article.slug %>">
                            <span class="content-tag"><%= article.category ? article.category.title : '' %></span>
                            <img src="<%= article.image %>" alt="<%= article.title %>">
                            <figcaption>
                                <h2 class="text-lg"><%- article.title.substring(0, 50) %>..</h2>
                                <p><%- article.body.substring(0, 200) %> ...</p>
                            </figcaption>
                        </a>
                    </figure>
                <% }) %>

            </div>
        </section>


        <div id="final">
            <section id="ai">
                <header class="grid grid-flow-col">
                    <h3>Destaque de hoje</h3>
                    <a href="#" class="grid grid-flow-col">
                        <strong>Ver Tudo</strong>
                        <span></span>
                    </a>
                </header>
                <div class="grid gap-32">
                    <%
                    const indicefinial = [8,9,10,11];
    
                    articles.filter((article, index) => indicefinial.includes(index)).forEach(article => { %>
    
                    
                    
                        <article class="grid grid-flow-col gap-16">
                            
                                <div>
                                    <a href="/<%= article.slug %>">
                                        <span class="content-tag"><%= article.category ? article.category.title : '' %></span>
                                        <h3 class="text-lg">
                                            <%- article.title.substring(0, 50) %>..
                                        </h3>
                                        <p class="text-sm"><%- article.body.substring(0, 200) %>..</p>
                                    </a>
                                </div>
                                <div>
                                    <a href="/<%= article.slug %>">
                                        <img src="<%= article.image %>" alt="<%= article.title %>">
                                    </a>
                                </div>
                            
                        </article>
                    <% }) %>
                </div>
            </section>
    
            <section id="aside">
                <div id="ads">
                    <img src="/assets/Ads.png" alt="Propaganda">
                </div>
        
                <section id="more">
                    <header class="grid grid-flow-col">
                        <h3>Viu isso aqui?</h3>
                        <a href="#" class="grid grid-flow-col">
                            <strong>Ver Tudo</strong>
                            <span></span>
                        </a>
                    </header>
        
                    <div class="grid gap-32">

                        <% 
                        const indicesaside = [12,13,14,15,16];

                        articles.filter((article, index) => indicesaside.includes(index)).forEach(article => { %>
                        
                            <article class="grid grid-flow-col gap-16">
                                
                                    <div>
                                        <a href="/<%= article.slug %>">
                                        <img src="<%= article.image %>" alt="<%= article.title %>">
                                        </a> 
                                    </div>
                                    <div>
                                        <a href="/<%= article.slug %>">
                                        <span class="content-tag"><%= article.category ? article.category.title : '' %></span>
                                        <h3 class="text-lg">
                                            <%- article.title.substring(0, 200) %>..
                                        </h3>   
                                    </a>                              
                                    </div> 
                                                         
                            </article>
                        <% }) %>
                    </div>
                </section>
            </section>
        </div>



    </main>




  

    
    
</body>

<%- include('partials/footer.ejs') %>

